<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aueb.podshare"
    xmlns:tools="http://schemas.android.com/tools">

    <permission android:name="android.permission.INTERNET"/>
    <permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />
    <permission android:name="android.permission.READ_PHONE_STATE" />
    <permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission-sdk-23 android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        tools:replace="android:appComponentFactory"
        android:appComponentFactory="whateverString"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_podshare"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_podshare_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:requestLegacyExternalStorage="true"
        android:usesCleartextTraffic="true"
        tools:targetApi="p">

        <activity android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="unspecified" />

        <activity android:name=".ForgotPasswordActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="unspecified" />

        <activity android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="unspecified" />

        <activity android:name=".UploadEpisodeActivity"
            android:screenOrientation="unspecified" />

        <activity android:name=".UploadEpisodeExistingPodcastActivity"
            android:screenOrientation="unspecified" />

        <activity android:name=".UploadEpisodeNewPodcastActivity"
            android:screenOrientation="unspecified" />

        <activity android:name=".UploadEpisodeFileActivity"
            android:screenOrientation="unspecified" />

        <activity android:name=".PlayEpisode"
            android:screenOrientation="unspecified"/>

    </application>

</manifest>