<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".SearchPodsharersFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_padding"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/search_field_podsharers"
            android:layout_width="280dp"
            android:layout_height="58dp"
            android:layout_marginStart="@dimen/spacingLarge"
            android:layout_marginEnd="@dimen/spacingLarge"
            android:background="@drawable/search_bar"
            android:ems="10"
            android:hint="@string/search_title"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:textColor="@color/gray"
            android:textSize="16sp"
            tools:context=".SearchPodsharersFragment" />

        <ImageButton
            android:id="@+id/search_btn_podsharers"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginTop="@dimen/spacingTiny"
            android:background="@drawable/search_button"
            android:clickable="true"
            android:contentDescription="@string/search_title"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/search" />
    </LinearLayout>
    <!--
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/resuls_podsharers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/podsharers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacingMedium"
            android:layout_marginLeft="@dimen/spacingMedium"
            android:layout_marginTop="@dimen/spacingMedium"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:padding="@dimen/spacingTiny"
            android:text="@string/podsharers"
            android:textColor="@color/gray"
            android:textSize="@dimen/textTitle" />

        <TextView
            android:id="@+id/number_of_podsharers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacingMedium"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:padding="@dimen/spacingTiny"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="@dimen/textTitle" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/list_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_search"></ListView>
    </ScrollView>
</LinearLayout>